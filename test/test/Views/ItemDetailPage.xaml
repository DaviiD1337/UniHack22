<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.Views.ItemDetailPage"
             Title="{Binding Title}"
             BackgroundColor="white">

    <StackLayout Spacing="20" Padding="15" >
        <Label Text="Text:" FontSize="Medium" TextColor="Black"/>
        <Label Text="{Binding Text}" FontSize="Small" TextColor ="Black"/>
        <Label Text="Description:" FontSize="Medium" TextColor="black" />
        <Label Text="{Binding Description}" FontSize="Small" TextColor="Black"/>
    </StackLayout>
    
</ContentPage>