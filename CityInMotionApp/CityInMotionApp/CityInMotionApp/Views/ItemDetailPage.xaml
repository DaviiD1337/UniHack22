<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityInMotionApp.Views.ItemDetailPage"
             Title="{Binding Title}"
             BackgroundColor="White"
              xmlns:local ="clr-namespace:CityInMotionApp" xmlns:viewmodels="clr-namespace:CityInMotionApp.ViewModels" x:DataType="viewmodels:ItemDetailViewModel">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" TextColor="black" />
        <Label Text="{Binding Text}" FontSize="Small" TextColor="black"/>
        <Label Text="Description:" FontSize="Medium"  TextColor="black"/>
        <Label Text="{Binding Description}" FontSize="Small" TextColor="black"/>
        <StackLayout Orientation="Horizontal" >

            <Label x:Name="lblMessage" FontSize="Large"></Label>

            <StackLayout>
                <Button Clicked="Button_Clicked"/>
                <Button Clicked="Button_Clicked_1"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>
    
</ContentPage>